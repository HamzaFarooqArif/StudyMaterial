@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            startLoading();
            $.when($.ajax(loadTimeslots())).then(function () {
                endLoading();
            });
            
        });
        function loadTimeslots()
        {
            var id = @Model.ID;
            getTimeslot(id, 1, 1);
            getTimeslot(id, 2, 1);
            getTimeslot(id, 3, 1);
            getTimeslot(id, 4, 1);
            getTimeslot(id, 5, 1);
            getTimeslot(id, 6, 1);
            getTimeslot(id, 7, 1);
            getTimeslot(id, 1, 2);
            getTimeslot(id, 2, 2);
            getTimeslot(id, 3, 2);
            getTimeslot(id, 4, 2);
            getTimeslot(id, 5, 2);
            getTimeslot(id, 6, 2);
            getTimeslot(id, 7, 2);
            getTimeslot(id, 1, 3);
            getTimeslot(id, 2, 3);
            getTimeslot(id, 3, 3);
            getTimeslot(id, 4, 3);
            getTimeslot(id, 5, 3);
            getTimeslot(id, 6, 3);
            getTimeslot(id, 7, 3);
            getTimeslot(id, 1, 4);
            getTimeslot(id, 2, 4);
            getTimeslot(id, 3, 4);
            getTimeslot(id, 4, 4);
            getTimeslot(id, 5, 4);
            getTimeslot(id, 6, 4);
            getTimeslot(id, 7, 4);
            getTimeslot(id, 1, 5);
            getTimeslot(id, 2, 5);
            getTimeslot(id, 3, 5);
            getTimeslot(id, 4, 5);
        }
        function getTimeslot(modelId, set, dow)
        {
            return $.ajax({
                url: '/TimeTable/LoadTimeslot',
                type: 'POST',
                datatype: "json",
                data: jQuery.param({
                    timetableId: modelId,
                    SET: set,
                    DOW: dow
                }),
                success: function (r) {
                    $("#"+dow+"-"+set).empty();
                    if(r.length > 0)
                    {
                        $("#"+dow+"-"+set).append("<p>"+r[0].Name+"</p><button onclick='pvwEdit("+modelId+", "+set+", "+dow+", "+r[0].ID+")' class='btn btn-default'>Edit</button><button onclick='pvwDelete("+modelId+", "+set+", "+dow+", "+r[0].ID+")' class='btn btn-default'>Delete</button>");
                    }
                    else
                    {
                        $("#"+dow+"-"+set).append("<button onclick='pvwCreate("+modelId+", "+set+", "+dow+")' class='btn btn-default'>Create</button>");
                        $("#"+dow+"-"+set).addClass("bg-secondary");
                    }
                }
            });
        }

        function startLoading()
        {
            $("#loadingScreen").css("display","block");
        }
        function endLoading()
        {
            $("#loadingScreen").css("display","none");
        }


        
        function pvwCreate(id, set, dow)
        {
            window.location = "/Timetable/PreviewCreate/?id="+id+"&set="+set+"&dow="+dow;
        }
        function pvwEdit(id, set, dow, timeslotID)
        {
            window.location = "/Timetable/PreviewEdit/?id="+id+"&set="+set+"&dow="+dow+"&timeslotID="+timeslotID;
        }
        function pvwDelete(id, set, dow, timeslotID)
        {
            window.location = "/Timetable/PreviewDelete/?id="+id+"&set="+set+"&dow="+dow+"&timeslotID="+timeslotID;
        }

    </script>
}

