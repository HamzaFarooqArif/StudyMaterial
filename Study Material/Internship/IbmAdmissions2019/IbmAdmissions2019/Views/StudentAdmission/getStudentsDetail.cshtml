                </div>
            </div>

            }
            @if ((bool)ViewBag.flag &&(bool)ViewBag.status)
            {
                <div class="row">
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.CNIC)
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CNIC)
                    </div>
                    <div class="col-md-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.Email)
                    </div>
